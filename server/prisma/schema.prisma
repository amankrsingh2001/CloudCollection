generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id            String      @id @default(uuid())
  email         String      @unique
  username      String      @unique
  password      String
  firstName     String
  lastName      String
  dateofBirth   String? 
  image         String?
  post          Post[]
  refreshToken  String?
  userDetail    UserDetail?
}

model UserDetail {
  id            String    @id @default(uuid())
  bio           String
  userRelId     String    @unique
  userRel       User      @relation(fields: [userRelId], references: [id])
}

model Post{
  id            String    @id @default(uuid())
  title         String
  description   String
  author        User      @relation(fields: [authorId], references: [id])
  authorId      String
  published     Boolean   @default(false)
  image         String[]
  likes         Int?
  tag           String[]
  createdAt     DateTime  @default(now())        
}

